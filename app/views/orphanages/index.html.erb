 <div class="row" id="featured">
  <h1 class="header center-align blue-text" id="reg">Featured Orphanages</h1>
  <br>
  <br>
  <div class="container" id="rowimages">
    <% @orphanages.each do |orphanage| %>
    <div class="col s4">
      <div class="card medium">
        <div class="card-image waves-effect waves-block waves-light">
          <%= image_tag orphanage.avatar.url{:medium}, class: "activator" %>
        </div>
        <div class="card-content">
          <span class="card-title activator">
            <%= orphanage.name %>
          </span>
          <p><%= link_to 'More Details', orphanage %></p>
        </div>
        <div class="card-reveal">
          <span class="card-title black-text">
            <%= orphanage.name %>
            <i class="mdi-navigation-close right black-text"></i>
          </span>
          <p>
            <%= orphanage.description %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <br />  
 </div>
