<%= form_for(@sponsor) do |f| %>
  <% if @sponsor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sponsor.errors.count, "error") %> prohibited this sponsor from being saved:</h2>

      <ul>
      <% @sponsor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="input-field">
    <%= f.label :first_name %><br>
    <%= f.text_field :fname %>
  </div>
  <div class="input-field">
    <%= f.label :last_name %><br>
    <%= f.text_field :lname %>
  </div>
  <div class="input-field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="input-field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  <div class="input-field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div class="input-field">
    <%= f.label :state_or_county %><br>
    <%= f.text_field :state %>
  </div>
  <!-- The picture that will be uploaded -->
  <p>Upload an Image of you looking pretty!</p>
  <%= f.file_field :image %>
  <br />
  <br />
   <%= link_to 'Back', sponsors_path, class:"blue waves-effect waves-blue btn" %>     
   |   
  <button class="actions blue waves-effect waves-blue btn" >
    <% f.submit %>
    Create Sponsor    
  </button>
</div>
<% end %>

